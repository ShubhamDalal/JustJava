<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="WrapWrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="WrapWrap.LeftRight8dp">
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
    </style>

    <style name="WrapWrap.TopMargin">
        <item name="android:layout_marginTop">@dimen/topMargin</item>
    </style>

    <style name="WrapWrap.TopMargin.LeftRightStart">
        <item name="android:paddingLeft">24dp</item>
    </style>

    <style name="PlusMinusButton">
        <item name="android:layout_width">@dimen/plusMinusButton</item>
        <item name="android:layout_height">@dimen/plusMinusButton</item>
    </style>

    <style name="MatchWrap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="MatchWrap.LeftRight8dp">
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
    </style>

    <style name="MatchWrap.TopMargin">
        <item name="android:layout_marginTop">@dimen/topMargin</item>
    </style>
</resources>
